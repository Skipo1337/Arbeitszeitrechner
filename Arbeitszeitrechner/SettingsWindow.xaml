<Window x:Class="Arbeitszeitrechner.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Einstellungen" 
        Width="400" 
        SizeToContent="Height" 
        WindowStartupLocation="CenterScreen" 
        ResizeMode="NoResize">

    <StackPanel Margin="15">

        <TextBlock Text="Einstellungen" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>

        <GroupBox Header="Standard-Arbeitszeit (Mo-Fr)" Margin="0,0,0,10" Padding="5">
            <StackPanel>
                <Grid Margin="0,0,0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Margin="0,0,5,0">
                        <Label Content="Von:"/>
                        <TextBox x:Name="Box_Von" Height="26"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Margin="5,0,0,0">
                        <Label Content="Bis:"/>
                        <TextBox x:Name="Box_Bis" Height="26"/>
                    </StackPanel>
                </Grid>

                <CheckBox x:Name="CheckBox_Overwrite" Content="Auf Montag bis Freitag anwenden" IsChecked="True" Margin="0,5,0,0"/>
                <TextBlock Text="Achtung: Überschreibt individuelle Zeiten!" FontSize="10" Foreground="Gray" Margin="20,2,0,0"/>
            </StackPanel>
        </GroupBox>

        <GroupBox Header="Berechnungsgrundlagen" Margin="0,0,0,10" Padding="5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Margin="0,0,5,0">
                    <Label Content="Wochenstunden:"/>
                    <TextBox x:Name="Box_Wochenstunden" Height="26"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Margin="5,0,0,0">
                    <Label Content="Arbeitstage:"/>
                    <TextBox x:Name="Box_Arbeitstage" Height="26"/>
                </StackPanel>
            </Grid>
        </GroupBox>

        <GroupBox Header="Pausen &amp; Alarm" Margin="0,0,0,10" Padding="5">
            <StackPanel>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Margin="0,0,5,0">
                        <Label Content="Dauer (Min):"/>
                        <TextBox x:Name="Box_PausenDauer" Height="26"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Margin="5,0,0,0">
                        <Label Content="Beginn (Uhr):"/>
                        <TextBox x:Name="Box_PausenBeginn" Height="26"/>
                    </StackPanel>
                </Grid>

                <!--<CheckBox x:Name="Check_Benachrichtigung" 
                          Content="Benachrichtigung &amp; Ton abspielen" 
                          Margin="0,10,0,0" FontWeight="Bold"/>

                <TextBlock Text="Meldet Pausenbeginn und Feierabend" FontSize="10" Foreground="Gray" Margin="20,2,0,0"/>-->
            </StackPanel>
        </GroupBox>

        <Grid Margin="0,5,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="15"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0" 
                    Content="Speichern" 
                    Height="30" 
                    Click="SaveButton_Click" 
                    IsDefault="True"
                    Background="#007ACC" 
                    Foreground="White" 
                    FontWeight="Bold"/>

            <Button Grid.Column="2" 
                    Content="Abbrechen" 
                    Height="30" 
                    Click="CancelButton_Click"
                    IsCancel="True"
                    Background="#DDDDDD" 
                    Foreground="Black"
                    FontWeight="Bold"/>
        </Grid>
    </StackPanel>
</Window>