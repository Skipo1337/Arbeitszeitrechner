<Window x:Class="Arbeitszeitrechner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:properties="clr-namespace:Arbeitszeitrechner.Properties"
        mc:Ignorable="d"
        Title="Arbeitszeitrechner" Height="750" Width="420" 
        Background="#F5F7FA"
        WindowStartupLocation="CenterScreen"
        Closing="Window_Closing">

    <Window.Resources>
        <Style TargetType="TextBox">
            <Setter Property="Height" Value="32"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="10,0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6"
                                BorderBrush="#E0E0E0"
                                BorderThickness="1">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="Label">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#444"/>
            <Setter Property="Padding" Value="0,5,5,5"/>
        </Style>

        <Style TargetType="Button" x:Key="ModernBtn">
            <Setter Property="Height" Value="40"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Padding="20">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#1e3c72" Offset="0.0"/>
                    <GradientStop Color="#2a5298" Offset="1.0"/>
                </LinearGradientBrush>
            </Border.Background>
            <Grid>
                <StackPanel>
                    <TextBlock Text="Arbeitszeit" FontSize="24" FontWeight="Bold" Foreground="White"/>
                    <TextBlock Text="Wochenübersicht" FontSize="12" Foreground="#AACCFF"/>
                </StackPanel>
                <Button x:Name="Button_Settings" Click="Button_Settings_Click" HorizontalAlignment="Right" VerticalAlignment="Top" 
                        Background="Transparent" BorderThickness="0" Cursor="Hand">
                    <Path Data="M19.14,12.94c0.04-0.3,0.06-0.61,0.06-0.94c0-0.32-0.02-0.64-0.07-0.94l2.03-1.58c0.18-0.14,0.23-0.41,0.12-0.61 l-1.92-3.32c-0.12-0.22-0.37-0.29-0.59-0.22l-2.39,0.96c-0.5-0.38-1.03-0.7-1.62-0.94L14.4,2.81c-0.04-0.24-0.24-0.41-0.48-0.41 h-3.84c-0.24,0-0.43,0.17-0.47,0.41L9.25,5.35C8.66,5.59,8.12,5.92,7.63,6.29L5.24,5.33c-0.22-0.08-0.47,0-0.59,0.22L2.74,8.87 C2.62,9.08,2.66,9.34,2.86,9.48l2.03,1.58C4.84,11.36,4.8,11.69,4.8,12s0.02,0.64,0.07,0.94l-2.03,1.58 c-0.18,0.14-0.23,0.41-0.12,0.61l1.92,3.32c0.12,0.22,0.37,0.29,0.59,0.22l2.39-0.96c0.5,0.38,1.03,0.7,1.62,0.94l0.36,2.54 c0.05,0.24,0.24,0.41,0.48,0.41h3.84c0.24,0,0.44-0.17,0.47-0.41l0.36-2.54c0.59-0.24,1.13-0.56,1.62-0.94l2.39,0.96 c0.22,0.08,0.47,0,0.59-0.22l1.92-3.32c0.12-0.22,0.07-0.47-0.12-0.61L19.14,12.94z M12,15.6c-1.98,0-3.6-1.62-3.6-3.6 s1.62-3.6,3.6-3.6s3.6,1.62,3.6,3.6S13.98,15.6,12,15.6z" 
                          Fill="White" Stretch="Uniform" Width="20" Height="20"/>
                </Button>
            </Grid>
        </Border>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="0,10,0,10">
            <Grid Margin="15,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="70"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="60"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="45"/>
                    <RowDefinition Height="45"/>
                    <RowDefinition Height="45"/>
                    <RowDefinition Height="45"/>
                    <RowDefinition Height="45"/>
                    <RowDefinition Height="45"/>
                    <RowDefinition Height="45"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Start" Grid.Row="0" Grid.Column="1" FontSize="11" Foreground="#888" Margin="0,0,0,5"/>
                <TextBlock Text="Ende" Grid.Row="0" Grid.Column="3" FontSize="11" Foreground="#888" Margin="0,0,0,5"/>
                <TextBlock Text="Std." Grid.Row="0" Grid.Column="4" FontSize="11" Foreground="#888" Margin="0,0,0,5" HorizontalAlignment="Right"/>

                <Label Content="Mo" Grid.Row="1" Grid.Column="0"/>
                <TextBox x:Name="TextBox_VonMontag" Grid.Row="1" Grid.Column="1" TextChanged="Check_TimeFormat"
                         Text="{Binding Source={x:Static properties:Settings.Default}, Path=MontagVon, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                <TextBlock Text="-" Grid.Row="1" Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="#CCC"/>
                <TextBox x:Name="TextBox_BisMontag" Grid.Row="1" Grid.Column="3" TextChanged="Check_TimeFormat"
                         Text="{Binding Source={x:Static properties:Settings.Default}, Path=MontagBis, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                <Label x:Name="MontagLabel" Grid.Row="1" Grid.Column="4" HorizontalAlignment="Right" FontSize="12" Foreground="#666"
/>

                <Label Content="Di" Grid.Row="2" Grid.Column="0"/>
                <TextBox x:Name="TextBox_VonDienstag" Grid.Row="2" Grid.Column="1" TextChanged="Check_TimeFormat"
                         Text="{Binding Source={x:Static properties:Settings.Default}, Path=DienstagVon, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                <TextBlock Text="-" Grid.Row="2" Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="#CCC"/>
                <TextBox x:Name="TextBox_BisDienstag" Grid.Row="2" Grid.Column="3" TextChanged="Check_TimeFormat"
                         Text="{Binding Source={x:Static properties:Settings.Default}, Path=DienstagBis, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                <Label x:Name="DienstagLabel" Grid.Row="2" Grid.Column="4" HorizontalAlignment="Right" FontSize="12" Foreground="#666"/>

                <Label Content="Mi" Grid.Row="3" Grid.Column="0"/>
                <TextBox x:Name="TextBox_VonMittwoch" Grid.Row="3" Grid.Column="1" TextChanged="Check_TimeFormat"
                         Text="{Binding Source={x:Static properties:Settings.Default}, Path=MittwochVon, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                <TextBlock Text="-" Grid.Row="3" Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="#CCC"/>
                <TextBox x:Name="TextBox_BisMittwoch" Grid.Row="3" Grid.Column="3" TextChanged="Check_TimeFormat"
                         Text="{Binding Source={x:Static properties:Settings.Default}, Path=MittwochBis, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                <Label x:Name="MittwochLabel" Grid.Row="3" Grid.Column="4" HorizontalAlignment="Right" FontSize="12" Foreground="#666"/>

                <Label Content="Do" Grid.Row="4" Grid.Column="0"/>
                <TextBox x:Name="TextBox_VonDonnerstag" Grid.Row="4" Grid.Column="1" TextChanged="Check_TimeFormat"
                         Text="{Binding Source={x:Static properties:Settings.Default}, Path=DonnerstagVon, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                <TextBlock Text="-" Grid.Row="4" Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="#CCC"/>
                <TextBox x:Name="TextBox_BisDonnerstag" Grid.Row="4" Grid.Column="3" TextChanged="Check_TimeFormat"
                         Text="{Binding Source={x:Static properties:Settings.Default}, Path=DonnerstagBis, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                <Label x:Name="DonnerstagLabel" Grid.Row="4" Grid.Column="4" HorizontalAlignment="Right" FontSize="12" Foreground="#666"/>

                <Label Content="Fr" Grid.Row="5" Grid.Column="0"/>
                <TextBox x:Name="TextBox_VonFreitag" Grid.Row="5" Grid.Column="1" TextChanged="Check_TimeFormat"
                         Text="{Binding Source={x:Static properties:Settings.Default}, Path=FreitagVon, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                <TextBlock Text="-" Grid.Row="5" Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="#CCC"/>
                <TextBox x:Name="TextBox_BisFreitag" Grid.Row="5" Grid.Column="3" TextChanged="Check_TimeFormat"
                         Text="{Binding Source={x:Static properties:Settings.Default}, Path=FreitagBis, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                <Label x:Name="FreitagLabel" Grid.Row="5" Grid.Column="4" HorizontalAlignment="Right" FontSize="12" Foreground="#666"/>

                <Label Content="Sa" Grid.Row="6" Grid.Column="0" Foreground="#AAA"/>
                <TextBox x:Name="TextBox_VonSamstag" Grid.Row="6" Grid.Column="1" TextChanged="Check_TimeFormat"
                         Text="{Binding Source={x:Static properties:Settings.Default}, Path=SamstagVon, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                <TextBlock Text="-" Grid.Row="6" Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="#CCC"/>
                <TextBox x:Name="TextBox_BisSamstag" Grid.Row="6" Grid.Column="3" TextChanged="Check_TimeFormat"
                         Text="{Binding Source={x:Static properties:Settings.Default}, Path=SamstagBis, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                <Label x:Name="SamstagLabel" Grid.Row="6" Grid.Column="4" HorizontalAlignment="Right" FontSize="12" Foreground="#666"/>

                <Label Content="So" Grid.Row="7" Grid.Column="0" Foreground="#AAA"/>
                <TextBox x:Name="TextBox_VonSonntag" Grid.Row="7" Grid.Column="1" TextChanged="Check_TimeFormat"
                         Text="{Binding Source={x:Static properties:Settings.Default}, Path=SonntagVon, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                <TextBlock Text="-" Grid.Row="7" Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="#CCC"/>
                <TextBox x:Name="TextBox_BisSonntag" Grid.Row="7" Grid.Column="3" TextChanged="Check_TimeFormat"
                         Text="{Binding Source={x:Static properties:Settings.Default}, Path=SonntagBis, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                <Label x:Name="SonntagLabel" Grid.Row="7" Grid.Column="4" HorizontalAlignment="Right" FontSize="12" Foreground="#666"/>
            </Grid>
        </ScrollViewer>

        <StackPanel Grid.Row="2" Background="White" Margin="0,10,0,0">
            <StackPanel.Effect>
                <DropShadowEffect Color="Black" Direction="90" BlurRadius="10" ShadowDepth="0" Opacity="0.1"/>
            </StackPanel.Effect>

            <Grid Margin="20,20,20,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="15"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" Background="#F0F4FF" CornerRadius="10" Padding="15" x:Name="GesamtzeitWocheBorder">
                    <StackPanel>
                        <TextBlock Text="WOCHE" FontSize="10" FontWeight="Bold" Foreground="#4A90E2" x:Name="GesamtWocheUberschrift"/>
                        <TextBlock x:Name="TextBlock_GesamtzeitWoche" Text="00:00" FontSize="22" FontWeight="Bold" Foreground="#333" Margin="0,5,0,0"/>
                        <TextBlock Text="Stunden" FontSize="10" Foreground="#888" x:Name="GesamtWocheStundenText"/>
                    </StackPanel>
                </Border>

                <Border Grid.Column="2" Background="#FFF8E1" CornerRadius="10" Padding="15">
                    <StackPanel>
                        <TextBlock Text="HEUTE GEHEN UM" FontSize="10" FontWeight="Bold" Foreground="#FFA000"/>
                        <TextBlock x:Name="TextBlock_EmpfohlenesGehen" Text="--:--" FontSize="22" FontWeight="Bold" Foreground="#333" Margin="0,5,0,0"/>
                        <TextBlock Text="Uhrzeit" FontSize="10" Foreground="#888"/>
                    </StackPanel>
                </Border>
            </Grid>

            <Grid Margin="20,10,20,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button x:Name="Button_Reset" Click="Button_Reset_Click" Style="{StaticResource ModernBtn}" 
                        Background="#EEF2F5" Foreground="#666" Width="50" Margin="0,0,10,0">
                    <Path Data="M12,5V1L7,6l5,5V7c3.31,0,6,2.69,6,6s-2.69,6-6,6s-6-2.69-6-6H4c0,4.42,3.58,8,8,8s8-3.58,8-8S16.42,5,12,5z" 
                          Fill="#666" Stretch="Uniform" Width="14" Height="14"/>
                </Button>

                <Button x:Name="Button_Berechnen" Content="BERECHNEN" Click="Button_Click" Style="{StaticResource ModernBtn}" IsDefault="True"
                        Background="#2a5298" Foreground="White" Grid.Column="1"/>
            </Grid>
        </StackPanel>

    </Grid>
</Window>